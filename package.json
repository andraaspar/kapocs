	"devDependencies": {
		"@types/lodash-es": "^4.17.12",
		"@types/node": "^22.3.0",
		"@types/yargs": "^17.0.33",
		"jest": "^29.7.0",
		"npm-run-all": "^4.1.5",
		"rimraf": "^6.0.1",
		"typescript": "^5.5.4",
		"vitest": "^2.0.5"
	},
	"scripts": {
		"_yarn": "yarn --version && yarn || npm i --no-save yarn@1.22.15 && yarn",
		"clean": "rimraf build",
		"compile-ts": "tsc",
		"compile": "npm run _yarn && run-s clean compile-ts",
		"sample": "run-s sample-normal sample-relative",
		"sample-normal": "node . --source test/src1 --target test/expected-normal --assets \"**/*asset*.txt\" --templates \"**/*template*.txt\" --dropins \"**/*dropin*.txt\"",
		"sample-relative": "node . --source test/src1 --base \"\" --target test/expected-relative --assets \"**/*asset*.txt\" --templates \"**/*template*.txt\" --dropins \"**/*dropin*.txt\"",
		"test": "vitest"
	},
	"dependencies": {
		"glob": "^11.0.0",
		"lodash-es": "^4.17.21",
		"yargs": "^17.7.2"
	}
}
